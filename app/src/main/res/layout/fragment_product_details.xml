<?xml version="1.0" encoding="UTF-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProductDetailsFragment">
    <com.android.volley.toolbox.NetworkImageView
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:id="@+id/image_product"
        />
    <TextView
        android:id="@+id/text_product_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:text="FRAGMENT PRODUCT CRUD"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">
        <TextView
            android:id="@+id/text_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="30dp"></TextView>
        <TextView
            android:id="@+id/text_product_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mark"
            android:textSize="30dp"
            android:layout_alignParentEnd="true"></TextView>
    </RelativeLayout>
    <TextView
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:id="@+id/text_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textSize="30dp"></TextView>

    <TextView
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:id="@+id/text_product_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="25dp"></TextView>
    <RelativeLayout
        android:paddingTop="85dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <TextView
            android:id="@+id/text_product_expiration_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expiration Date"
            android:textSize="20dp"></TextView>
        <TextView
            android:id="@+id/text_product_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stock"
            android:textSize="20dp"
            android:layout_alignParentEnd="true"></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">
        <com.google.android.material.button.MaterialButton
            app:icon="@drawable/menos"
            app:iconGravity="textStart"
            android:textSize="23dp"
            android:id="@+id/button_increase"
            android:layout_width="120dp"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"/>
        <com.google.android.material.textfield.TextInputEditText
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_toRightOf="@+id/button_increase"
            android:layout_width="170dp"
            android:layout_height="65dp"
            android:text="0"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_decrease"
            android:layout_width="120dp"
            android:layout_height="65dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <com.google.android.material.button.MaterialButton
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Add"
        />

</LinearLayout>