<?xml version="1.0" encoding="UTF-8" ?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailsFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.android.volley.toolbox.NetworkImageView
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:id="@+id/image_product"
            />
        <TextView
            android:id="@+id/text_product_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:text="FRAGMENT PRODUCT CRUD"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp">
            <TextView
                android:id="@+id/text_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="30dp"></TextView>
            <TextView
                android:id="@+id/text_product_mark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mark"
                android:textSize="30dp"
                android:layout_alignParentEnd="true"></TextView>
        </RelativeLayout>
        <TextView
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:id="@+id/text_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textSize="30dp"></TextView>

        <TextView
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:id="@+id/text_product_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="25dp"></TextView>
        <RelativeLayout
            android:paddingTop="85dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">
            <TextView
                android:id="@+id/text_product_expiration_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expiration Date"
                android:textSize="20dp"></TextView>
            <TextView
                android:id="@+id/text_product_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stock"
                android:textSize="20dp"
                android:layout_alignParentEnd="true"></TextView>
        </RelativeLayout>
        <TextView
            android:id="@+id/discount_product"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descuento"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/subtotal_price_product"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="subtotal"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_decrease"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="120dp"
                android:layout_height="65dp"
                android:layout_alignParentStart="true"
                android:textSize="23dp"
                app:icon="@drawable/menos"
                app:iconGravity="textStart"
                tools:ignore="SpeakableTextPresentCheck" />

            <com.google.android.material.textfield.TextInputEditText
                style="@style/Widget.MaterialComponents.TimePicker.Display.TextInputEditText"
                android:id="@+id/product_amount"
                android:layout_width="150dp"
                android:layout_height="65dp"
                android:layout_toRightOf="@+id/button_decrease"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="0"
                android:textAlignment="center"
                android:textSize="20dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_increase"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="120dp"
                android:layout_height="65dp"
                android:layout_alignParentEnd="true"
                tools:ignore="SpeakableTextPresentCheck" />
        </RelativeLayout>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="80dp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:text="Add"
            />
    </LinearLayout>
</FrameLayout>